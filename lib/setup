#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
SSM_DIR="$SCRIPT_DIR/.."

source "$SSM_DIR/lib/constants"

# Require an argument be present
function require_argument {
  if [ -z $1 ]; then
      echo "[ERROR] No argument given!"
      exit 1
  fi
}

# Require a file to be present
function require_file_presence {
  require_argument $1
  if [ ! -f $1 ]; then
    echo "[ERROR] File not found! ($1)"
    exit 1
  fi
}

# Import all public keys in pubkeys dir
function import_public_keys {
  echo "[INFO] Importing public keys from $PUBKEYS_DIR:"
  for filename in $PUBKEYS_DIR/*.pub; do
    [ -e "$filename" ] || continue
    gpg -q --yes --import $filename
  done
}

# -------------------------
# Load GPG keys var
# -------------------------
file=$KEYS_LIST_FILE
if [ ! -f $file ]; then
    echo "[ERROR] $KEYS_LIST_FILE file not found!"
    exit 1
fi

# Add newline to end of file
[ -n "$(tail -c1 $file)" ] && echo >> $file
gpg_keys=()
while IFS= read -r line; do
  # If line is not a comment (starts with #)
  if  [[ $line != \#* ]] ; then  
    gpg_keys+=("$line")
  fi
done < $file # Read lines from file


# -------------------------
# Load secret files var
# -------------------------
file=$SECRETS_LIST_FILE
if [ ! -f $file ]; then
    echo "[ERROR] $SECRETS_LIST_FILE file not found!"
    exit 1
fi

# Add newline to end of file
[ -n "$(tail -c1 $file)" ] && echo >> $file
secret_files=()
while IFS= read -r line; do
  # If line is not a comment (starts with #)
  if  [[ $line != \#* ]] ; then
    secret_files+=("$line")
  fi
done < $file # Read lines from file