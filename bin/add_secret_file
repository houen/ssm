# Get current dir (bin dir)
BIN_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
SSM_DIR="$BIN_DIR/.."

file=$1

if [ ! -f $file ]; then
    echo "File not found!"
fi

echo "[INFO] Adding file $file to $SSM_DIR/secret_files"
echo $file >> "$SSM_DIR/secret_files"